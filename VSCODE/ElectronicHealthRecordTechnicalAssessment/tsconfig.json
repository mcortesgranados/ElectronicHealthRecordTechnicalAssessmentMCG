{
  "compilerOptions": {
    "outDir": "backend/dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES6",
    "rootDir": "backend/src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["backend/src"],  
  "exclude": ["node_modules", "backend/dist"]
}
